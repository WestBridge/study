C++:
class Solution
{
public:
    string addBinary(string a, string b)
    {
        string s = "";
        
        int c = 0, i = a.size() - 1, j = b.size() - 1;
        while(i >= 0 || j >= 0 || c == 1)
        {
            c += i >= 0 ? a[i --] - '0' : 0;
            c += j >= 0 ? b[j --] - '0' : 0;
            s = char(c % 2 + '0') + s;
            c /= 2;
        }
        
        return s;
    }
};

java:
class Solution {
   public String addBinary(String a, String b) {
    int i = a.length() - 1; 
    int j = b.length() - 1;
    int c = 0;
    
    String str = "";
    while (i >= 0 || j >= 0 || c == 1) {
        c += i >= 0 ? a.charAt(i--) - '0': 0;
        c += j >= 0 ? b.charAt(j--) - '0': 0;
        str = (c & 1) + str;
        c = c >> 1;
    }
    
    return str;
}
}

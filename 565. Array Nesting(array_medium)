C++:
//Approach #1 Brute Force [Time Limit Exceeded]
class Solution {
public:
    int arrayNesting(vector<int>& nums) {
        int maxSize = 0;
        for(int i = 0; i < nums.size(); i++){
            int j = i;
            int count = 1;
            while(nums[j] != i){
                count++;
                j = nums[j];
            }
            maxSize = max(maxSize, count);
        }
        return maxSize;
    }
};
